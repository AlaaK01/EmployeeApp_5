@model IEnumerable<Employee>

<!DOCTYPE html>
<html lang="en">
<head>

    <title>All Employees</title>
</head>
<body>
    <h1>All Employees</h1>

    <a asp-action="Create" class="btn btn-primary btn-sm">Create New Employee</a>
    <table class="tabe">
        <thead>
            <tr>
                <th colspan="7">All Employees</th>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(employee => employee.EmployeeName)</th>
                <th>@Html.DisplayNameFor(employee => employee.EmployeeNumber)</th>
                <th>@Html.DisplayNameFor(employee => employee.Birthdate)</th>
                <th>@Html.DisplayNameFor(employee => employee.Email)</th>
                <th>@Html.DisplayNameFor(employee => employee.Salary)</th>
                <th>@Html.DisplayNameFor(employee => employee.Department)</th>
            </tr>
        </thead>
        <tboody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelEmployee => employee.EmployeeName)</td>
                    <td>@Html.DisplayFor(modelEmployee => employee.EmployeeNumber)</td>
                    <td>@Html.DisplayFor(modelEmployee => employee.Birthdate)</td>
                    <td>@Html.DisplayFor(modelEmployee => employee.Email)</td>
                    <td>@Html.DisplayFor(modelEmployee => employee.Salary)</td>
                    <td >@Html.DisplayFor(modelEmployee => employee.Department.DepartmentName)</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new{id = employee.EmployeeId})
                        @Html.ActionLink("Delete", "Delete", new{id = employee.EmployeeId},new {onclick = "return confirm('Are you sure you want to delete this employee?');"})
                    </td>
                </tr>

            }
        </tboody>

    </table>

</body>
</html>






























